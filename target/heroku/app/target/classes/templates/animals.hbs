{{#partial "content"}}
    <div class="row">
        <form action="/animals/new" method="post">
            <div class="form-group">
                <label for="name">Animal Name</label>
                <input type="text" class="form-control" name="name">
            </div>
            <button class="btn btn-primary" type="submit">Add Animal</button>
        </form>
    </div>
    {{#each animals}}
<div class="well">
    {{name}}
</div>
    {{/each}}
{{/partial}}
{{>layout.hbs}}